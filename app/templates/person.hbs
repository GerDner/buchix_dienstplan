<div>

  <div class="col-xs-4">
    <div class="form-group">
      <label>Vorname</label>
      {{input type="text" value=name class="form-control"}}
    </div>
    <div class="form-group">
      <label>Nachname</label>
      {{input type="text" value=lastname class="form-control"}}
    </div>
    <div class="form-group">
      <label>E-Mail</label>
      {{input type="text" value=mail class="form-control"}}
    </div>
    <div class="form-group">
      <label>Telefon</label>
      {{input type="text" value=phone class="form-control"}}
    </div>
    <div class="form-group">
      <label>Handy</label>
      {{input type="text" value=handy class="form-control"}}
    </div>
  </div>
  <div>
    <hr>
    <div class="row">
      <div class="col-xs-12">
        <div class="btn-group">
          {{#each type in clickedTypes}}
            <button class="btn btn-primary" {{action 'unsetType' type}}>{{type.value}}</button class="btn btn-default">
          {{/each}}
          {{#each type in types}}
            <button class="btn btn-default" {{action 'setType' type}}>{{type.value}}</button class="btn btn-default">
          {{/each}}
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-xs-12">
      <div class="btn-group">
        <button class="btn btn-success" {{action 'savePerson' model}}>Speichern</button class="btn btn-default">
      </div>
    </div>
  </div>
  <hr>
